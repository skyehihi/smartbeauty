@page
@model SmartBeauty.Pages.Salons.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Salon</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salon.SalonName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salon.SalonName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salon.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salon.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salon.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salon.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salon.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salon.PhoneNumber)
        </dd>
    </dl>
    <dt>
        @Html.DisplayNameFor(model => model.Salon.Appointments)
    </dt>
    <dd>
        <table class="table">
            <tr>
                <th>Customer First Name</th>
                <th>Customer Last Name</th>
                <th>Grade</th>
            </tr>
            @foreach (var item in Model.Salon.Appointments)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
        </tr>
            }
        </table>
    </dd>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Salon.SalonID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
