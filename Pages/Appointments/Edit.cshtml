@page
@model SmartBeauty.Pages.Appointments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.AppointmentID" />
            <div class="form-group">
                <label asp-for="Appointment.ClientID" class="control-label"></label>
                <select asp-for="Appointment.ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
                <span asp-validation-for="Appointment.ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.SalonID" class="control-label"></label>
                <select asp-for="Appointment.SalonID" class="form-control" asp-items="ViewBag.SalonID"></select>
                <span asp-validation-for="Appointment.SalonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.BookingDate" class="control-label"></label>
                <input asp-for="Appointment.BookingDate" class="form-control" />
                <span asp-validation-for="Appointment.BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
